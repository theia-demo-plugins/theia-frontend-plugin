{
  "name": "@wiptheia/theia-frontend-plugin",
  "publisher": "theia",
  "version": "0.0.1",
  "description": "Simple Frontend Test Plugin",
  "main": "dist/bundle.js",
  "contributes": {
      "languages": [{
          "id": "latex",
          "aliases": ["LaTeX", "latex"],
          "extensions": [".tex"]
      }],
      "grammars": [{
          "language": "latex",
          "scopeName": "text.tex.latex",
          "path": "./syntaxes/latex.tmLanguage"
      }],
      "snippets": [{
          "language": "latex",
          "path": "./snippets/snippets.json"
      }]
  },
  "scripts": {
    "compile": "webpack-cli --config webpack.config.js",
    "build": "webpack-cli --config webpack.config.js && theia:plugin pack",
    "watch": "webpack-cli -w --config webpack.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Oleksii Kurinnyi <okurinny@redhat.com>",
  "license": "EPL-1.0",
  "engines": {
    "theiaPlugin": "latest"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TypeScript configuration",
      "properties": {
        "typescript.useCodeSnippetsOnMethodSuggest": {
            "type": "boolean",
            "default": false,
            "description": "Complete functions with their parameter signature."
          },
          "typescript.tsdk": {
            "type": ["string", "null"],
            "default": null,
            "description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
          }
      }
    }
  },
  "theiaPlugin": {
    "frontend": "dist/theia-frontend-plugin.js"
  },
  "devDependencies": {
    "@theia/plugin": "next",
    "@wiptheia/plugin-package": "latest",
    "@types/lodash": "^4.14.105",
    "clean-webpack-plugin": "^0.1.19",
    "ts-loader": "^4.1.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  }
}
